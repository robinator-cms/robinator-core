@page "{type}/{id?}"
@model Robinator.Core.Areas.RobinatorAdmin.Pages.EditorModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
    ViewData["Title"] = $"{Model.Title} Editor";
}

<a asp-page="./List" asp-route-type="@Model.Type">Back</a><br />
@using (var form = Html.BeginForm(FormMethod.Post))
{
    @foreach (var editor in Model.EditorFields)
    {
        editor.Html.AddCssClass("form-control");
        editor.Html.Attributes.Add("placeholder", editor.Text);
        <div class="form-group">
            <label>@editor.Text</label>
            @editor.Html
        </div>
        @editor.Others
    }
    <input type="submit" class="btn btn-primary" value="Save" />
}
