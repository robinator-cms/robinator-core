@page "{type}"
@model Robinator.Core.Areas.RobinatorAdmin.Pages.ListModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
    ViewData["Title"] = $"{Model.TypeName} Listing";
}
<a asp-page="./Index" class="btn btn-link">Back</a>
<a asp-page="./Editor" asp-route-type="@Model.Type" class="btn btn-primary float-right">Create new</a>
<ul class="list-group my-3">
    @foreach (var content in Model.Contents)
    {
        <li class="list-group-item"><a asp-page="./Editor" asp-route-type="@Model.Type" asp-route-id="@content.Id">@content.Text</a></li>
    }
</ul>
<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item@((Model.PageNumber > 0)? "" : " disabled")">
            <a asp-page="./List" asp-route-type="@Model.Type" asp-route-pageNumber="@(Model.PageNumber - 1)" class="page-link" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        <li class="page-item"><a class="page-link">@(Model.PageNumber + 1)</a></li>
        <li class="page-item@((Model.PageNumber < (Model.Count - 1) / 10)? "" : " disabled")">
            <a asp-page="./List" asp-route-type="@Model.Type" asp-route-pageNumber="@(Model.PageNumber + 1)" class="page-link" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>
